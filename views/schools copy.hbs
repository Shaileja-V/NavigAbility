    <section class="schools-section">
        <h1>Schools</h1>

        <!-- Toggle button for Add School Form -->
        <button class="toggle-form-btn" onclick="toggleForm()">Add School</button>

        <!-- Add School Form -->
        <form id="add-school-form" class="add-school-form" onsubmit="addSchool(event)">
            <label for="school-name">School Name:</label>
            <input type="text" id="school-name" required>

            <label for="location">Location:</label>
            <input type="text" id="location" required>

            <label for="phone">Phone:</label>
            <input type="tel" id="phone" required>

            <label for="email">Email:</label>
            <input type="email" id="email" required>

            <label for="website">Website (optional):</label>
            <input type="url" id="website">

            <label for="services">Services Offered:</label>
            <textarea id="services" required></textarea>

            <button type="submit" class="submit-btn">Add School</button>
        </form>

        <!-- Existing School Cards -->
        <div id="school-cards-container">
            <!-- Existing static school cards here -->
        </div>
    </section>

    <!-- Modal for User's details -->
    <div class="modal fade" id="modify_profile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modify password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <form class="float-label" id="editModal">

                        <div class="form-group">
                            <input type="text" id="username_form" name="username_form" class="input-field">
                            <label for="username_form" class="float-label">Username:</label>
                        </div>

                        <div class="form-group">
                            <input type="text" id="full_name_form" name="full_name_form" class="input-field">
                            <label for="full_name_form" class="float-label">Full Name:</label>
                        </div>

                        <div class="form-group">
                            <input type="text" id="bio_form" name="bio_form" class="input-field">
                            <label for="bio_form" class="float-label">Bio:</label>
                        </div>

                        <div class="form-group">
                            <input type="text" id="email_form" name="email_form" class="input-field">
                            <label for="email_form" class="float-label">Email:</label>
                        </div>

                        <div class="form-group">
                            <input type="text" id="phone_form" name="phone_form" class="input-field">
                            <label for="phone_form" class="float-label">Phone Number:</label>
                        </div>
                        <input class="btn btn-outline-dark ms-2" type="submit" value="Edit Details"></input>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark ms-2" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
